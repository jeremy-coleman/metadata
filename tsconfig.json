{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,

    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",

    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json"]
}
